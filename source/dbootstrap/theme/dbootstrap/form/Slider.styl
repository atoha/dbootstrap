// General
.dbootstrap .dijitSlider {
    color: $grayLight;
}

.dbootstrap .dijitSliderRemainingBar {
    border: none;
    background-image: linear-gradient(center top, $backgroundColor, $backgroundHighlightColor);
    box-shadow: inset 2px 1px 2px rgba(0,0,0,.1);
}

.dbootstrap .dijitSliderProgressBar {
    border: none;
    background-color: $defaultAccentColor;
    background-image: linear-gradient(center top, $defaultAccentColor, $defaultAccentColorHighlight);
    box-shadow: inset 0 -1px 0 rgba(0,0,0,.15);
}

.dbootstrap .dijitSliderImageHandle {
    border: 1px solid rgba(0, 0, 0, 0.15);
    background-color: $white;
}

.dbootstrap .dijitRuleMark {
    border-color: $grayLight;
}

// Horizontal
.dbootstrap .dijitSliderBarH {
    height: 1em;
}

.dbootstrap .dijitSliderImageHandleH {
    box-shadow: 1px 0 2px rgba(0, 0, 0, 0.15);
    width: 11px;
    height: 1.5em;
}

.dbootstrap .dijitSliderBumperH {
    @extend .dbootstrap .dijitSliderRemainingBar;
    height: 1em;
}

.dbootstrap .dijitSliderBumperH.dijitSliderRightBumper {
    border-bottom-right-radius: 4px;
    border-top-right-radius: 4px;
    margin-left: -4px; // To hide box shadow
    padding-right: (@margin-left * -1);
}

.dbootstrap .dijitSliderBumperH.dijitSliderLeftBumper {
    @extend .dbootstrap .dijitSliderProgressBar;
    border-bottom-left-radius: 4px;
    border-top-left-radius: 4px;
}

.dbootstrap .dijitRuleLabelsContainerH {
    padding-bottom: 5px;
}

// Vertical
.dbootstrap .dijitSliderBarV {
    width: 1em;
}

.dbootstrap .dijitSliderV .dijitSliderRemainingBar {
    border: none;
    background-image: linear-gradient(center top, $backgroundColor, $backgroundHighlightColor);
    box-shadow: inset 2px -2px 2px rgba(0,0,0,.1);
}

.dbootstrap .dijitSliderV .dijitSliderProgressBar {
    border: none;
    background-image: linear-gradient(left center, $defaultAccentColor, $defaultAccentColorHighlight);
    box-shadow: inset -1px 0 0 rgba(0,0,0,.15);
}

.dbootstrap .dijitSliderImageHandleV {
    box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.15);
    width: 1.5em;
    height: 11px;
}

.dbootstrap .dijitSliderBumperV {
    @extend .dbootstrap .dijitSliderV .dijitSliderRemainingBar;
    width: 1em;
}

.dbootstrap .dijitSliderBumperV.dijitSliderTopBumper {
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    margin-bottom: -4px; // To hide box shadow
    padding-top: (@margin-bottom * -1);
}

.dbootstrap .dijitSliderBumperV.dijitSliderBottomBumper {
    @extend .dbootstrap .dijitSliderV .dijitSliderProgressBar;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
}

.dbootstrap .dijitRuleLabelsContainerV {
    margin: 0 5px;
}

// Disabled
.dbootstrap .dijitSliderDisabled {
    opacity: 0.65;
}
