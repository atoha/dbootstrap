.bootstrap .dijitSelect {
    border: none;
    color: $gray;
    transition: border linear .2s, box-shadow linear .2s;
}

.bootstrap .dijitSelect .dijitButtonNode {
    @extend .bootstrap .dijitComboBox .dijitButtonNode;
}

.bootstrap .dijitSelect .dijitButtonNode.dijitArrowButton {
    @extend .bootstrap .dijitComboBox .dijitButtonNode.dijitArrowButton;
}

.bootstrap .dijitSelect .dijitButtonContents {
    background-color: $inputBackground;
    box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
    border-radius: $inputBorderRadius 0 0 $inputBorderRadius;
    border: 1px solid $inputBorder;
}

// Disabled
.bootstrap .dijitSelect.dijitSelectDisabled .dijitButtonContents {
    @extend .bootstrap .dijitTextBoxDisabled;
}

.bootstrap .dijitSelectDisabled .dijitButtonNode {
    @extend .bootstrap .dijitComboBoxDisabled .dijitButtonNode;
}

.bootstrap .dijitSelectDisabled .dijitButtonContents .dijitButtonText {
    opacity: 0.5;
}
